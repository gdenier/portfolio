---
interface Props {
  href: string | undefined
  class?: string
  disabled?: boolean
  target?: string
  rel?: string
}
const props = Astro.props
---

{
  props.disabled ? (
    <button
      disabled
      class={`flex w-fit cursor-not-allowed justify-center gap-3 rounded border border-black px-6 py-3 opacity-60 ${props.class}`}
    >
      <slot />
    </button>
  ) : (
    <a
      href={props.href}
      target={props.target}
      rel={props.rel}
      class={`flex w-fit justify-center gap-3 rounded border border-black px-6 py-3 transition-transform duration-150 ease-in-out hover:scale-105 ${props.class}`}
    >
      <slot />
    </a>
  )
}
