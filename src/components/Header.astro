---
import Logo from "./Logo.astro"
import MenuIcon from "./icons/MenuIcon.astro"
import CloseIcon from "./icons/CloseIcon.astro"

const menu = [
  { href: "/", name: "Accueil" },
  // { href: "#about", name: " A propos" },
  { href: "#jobs", name: "Experiences" },
  { href: "#projects", name: "Projets" },
  { href: "#contact", name: "Contact" },
]
---

<!-- make bg when scroll is not on top -->
<div class="fixed top-0 z-10 w-screen shadow">
  <div class="container flex justify-between bg-white py-2 md:py-6">
    <a href="/"><Logo /></a>
    <nav class="hidden md:block">
      <ul class="flex gap-6">
        {
          menu.map((link) => (
            <li>
              <a href={link.href}>{link.name}</a>
            </li>
          ))
        }
      </ul>
    </nav>
    <button data-menu-button class="md:hidden"><MenuIcon /></button>
  </div>
</div>
<div
  data-mobile-menu="closed"
  class="absolute inset-0 z-30 h-screen transition-transform duration-300 ease-in-out data-[mobile-menu=closed]:-translate-x-full"
>
  <button data-menu-close-button class="absolute right-0 top-0 mx-8 my-6"
    ><CloseIcon /></button
  >
  <nav class="h-full w-full bg-white">
    <ul class="flex h-full w-full flex-col items-center justify-center gap-6">
      {
        menu.map((link) => (
          <li data-mobile-menu-element>
            <a href={link.href}>{link.name}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>

<script>
  const mobileMenu = document.querySelector("[data-mobile-menu]")
  const interfaceElement = []
  interfaceElement.push(document.querySelector("[data-menu-button]"))
  interfaceElement.push(document.querySelector("[data-menu-close-button]"))
  interfaceElement.push(
    ...document.querySelectorAll("[data-mobile-menu-element]")
  )
  interfaceElement.forEach((element) =>
    element?.addEventListener("click", () => {
      const state = mobileMenu?.getAttribute("data-mobile-menu")
      mobileMenu?.setAttribute(
        "data-mobile-menu",
        state === "closed" ? "open" : "closed"
      )
    })
  )
</script>
